{% extends "@Theme/layout.html.twig" %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block content %}
<h1>Edit template</h1>

{% if error != null %}
    <div class="alert alert-danger" role="alert">
        <i class="fa fa-exclamation-circle"></i>
        Error adding template
    </div>
{% endif %}

<form action="#" method="post" >
    {{ form_widget(form) }}

    <div class="buttonbox">
        <button type="submit" class="btn btn-success">
            <i class="fa fa-server"></i>
            Save
        </button>
        <a href="{{ path('templates_index') }}" class="btn btn-default" role="button">
            <i class="fa fa-arrow-left"></i>
            Back
        </a>
        {% if template != null %}
        <a href="{{ path('templates_delete', {'templateId': template.getId()}) }}"
         class="btn btn-danger" role="button" onclick="return confirm('Are you sure?')">
            <i class="fa fa-trash"></i>
            Delete
        </a>
        {% endif %}
    </div>
</form>
{% endblock %}
